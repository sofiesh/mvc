<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/paper_unicorn.png') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <span class="site-title">My Symfony Site</span>
        </header>
        
        <nav>
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>
                <li><a href="{{ 'game/card' }}">Card Game</a></li>
                <li><a href="{{ path('kmom') }}">Kmom's</a></li>
            </ul>

        </nav>

        <main>{% block main %}{% endblock %}</main>

        <footer>{% block footer %}
            <a href="{{ asset('img/paper_unicorn.png') }}">
                <img src="{{ asset('img/paper_unicorn.png') }}" alt="unicorn">
                <a href="{{ asset('img/paper_unicorn.png') }}">
                    <img src="{{ asset('img/paper_unicorn.png') }}" alt="unicorn">
                    <a href="{{ asset('img/paper_unicorn.png') }}">
                        <img src="{{ asset('img/paper_unicorn.png') }}" alt="unicorn">
                        <a href="{{ asset('img/paper_unicorn.png') }}">
                            <img src="{{ asset('img/paper_unicorn.png') }}" alt="unicorn">
                                                                    
            {% endblock %}</footer>


    </body>
</html>
