            <ul>
                <a href="{{ path('home') }}">Home</a> | 
                <a href="{{ path('about') }}">About</a> |
                <a href="{{ path('report') }}">Report</a> |
                <a href="{{ path('api') }}">Json routes</a> |
                <a href="{{ path('card_game') }}">Card Game</a> |
                <a href="{{ path('game_21') }}">Game 21</a> |
                <a href="{{ path('kmom') }}">Kmom's</a>
            </ul>
            </div>
        </nav>



        <main>{% block main %}{% endblock %}</main>

        <footer>{% block footer %}
            <p><a href="{{ asset('img/paper_unicorn.png') }}">
                <img src="{{ asset('img/paper_unicorn.png') }}" alt="unicorn"></a>
Copyright Sofie Swagemakers Herou  <a href="{{ asset('img/paper_unicorn.png') }}">
